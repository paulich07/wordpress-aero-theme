{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#007aff",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#5856d6",
                    "name": "Secondary"
                },
                {
                    "slug": "background",
                    "color": "#f2f2f7",
                    "name": "Background"
                },
                {
                    "slug": "foreground",
                    "color": "#000000",
                    "name": "Foreground"
                },
                {
                    "slug": "tertiary",
                    "color": "#8e8e93",
                    "name": "Tertiary"
                },
                {
                    "slug": "accent",
                    "color": "#ff9500",
                    "name": "Accent"
                },
                {
                    "slug": "card-background",
                    "color": "#ffffff",
                    "name": "Card Background"
                },
                {
                    "slug": "footer-background",
                    "color": "#f2f2f7",
                    "name": "Footer Background"
                },
                {
                    "slug": "footer-text",
                    "color": "#8e8e93",
                    "name": "Footer Text"
                },
                {
                    "slug": "border",
                    "color": "#c7c7cc",
                    "name": "Border"
                },
                {
                    "slug": "background-dark",
                    "color": "#000000",
                    "name": "Background Dark"
                },
                {
                    "slug": "foreground-dark",
                    "color": "#ffffff",
                    "name": "Foreground Dark"
                },
                {
                    "slug": "card-background-dark",
                    "color": "#1c1c1e",
                    "name": "Card Background Dark"
                },
                {
                    "slug": "input-background-dark",
                    "color": "#1c1c1e",
                    "name": "Input Background Dark"
                },
                {
                    "slug": "border-dark",
                    "color": "#3a3a3c",
                    "name": "Border Dark"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-to-secondary",
                    "gradient": "linear-gradient(135deg, #007aff 0%, #5856d6 100%)",
                    "name": "Primary to Secondary"
                },
                {
                    "slug": "accent-to-secondary",
                    "gradient": "linear-gradient(135deg, #ff9500 0%, #5856d6 100%)",
                    "name": "Accent to Secondary"
                }
            ],
            "duotone": [
                {
                    "colors": [ "#007aff", "#ffffff" ],
                    "slug": "primary-white",
                    "name": "Primary and White"
                },
                {
                    "colors": [ "#5856d6", "#ffffff" ],
                    "slug": "secondary-white",
                    "name": "Secondary and White"
                }
            ],
            "custom": true,
            "customGradient": true,
            "link": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
                    "slug": "system-font",
                    "name": "System Font"
                },
                {
                    "fontFamily": "'SF Pro Display', sans-serif",
                    "slug": "sf-pro-display",
                    "name": "SF Pro Display"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "13px",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "16px",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "20px",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "26px",
                    "name": "Extra Large"
                }
            ],
            "customFontSize": true
        },
        "spacing": {
            "units": [ "px", "em", "rem", "vh", "vw", "%" ],
            "customSpacingSize": true
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1100px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--foreground)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--sf-pro-display)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600"
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "#ffffff"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "600"
                },
                "border": {
                    "radius": "20px"
                },
                "spacing": {
                    "padding": {
                        "top": "10px",
                        "right": "20px",
                        "bottom": "10px",
                        "left": "20px"
                    }
                }
            },
            "core/navigation": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "500"
                }
            }
        }
    }
}